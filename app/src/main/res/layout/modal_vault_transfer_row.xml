<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >

        <ImageView
            android:id="@+id/transfer_vault_background"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/vault_banner"
            />

        <!--Left spacer for class type-->
        <android.support.v4.widget.Space
            android:id="@+id/transfer_class_spacer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <!--top percent spacer for class type-->
        <android.support.v4.widget.Space
            android:id="@+id/transfer_class_spacer_top"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.7"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/transfer_class_spacer"
            />

        <TextView
            android:id="@+id/transfer_class_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintStart_toEndOf="@id/transfer_class_spacer"
            app:layout_constraintTop_toBottomOf="@id/transfer_class_spacer_top"
            android:textColor="@color/colorWhite"
            android:text="@string/vault"
            android:textSize="15sp"
            />

